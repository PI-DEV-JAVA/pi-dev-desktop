<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pi.controllers.EvenementController">

    <top>
        <Label alignment="CENTER" prefHeight="60.0" text="GESTION DES ÉVÉNEMENTS" BorderPane.alignment="CENTER">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Label>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="20.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="30.0" left="50.0" right="50.0" top="30.0" />
            </padding>

            <children>
                <GridPane hgap="10.0" vgap="10.0">
                    <children>
                        <Label text="ID:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <HBox spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="0">
                            <TextField fx:id="idField" promptText="Entrez ID pour rechercher" HBox.hgrow="ALWAYS" />
                            <Button mnemonicParsing="false" onAction="#rechercherParId" text="Rechercher" />
                        </HBox>

                        <Label text="Titre:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                        <TextField fx:id="titreField" GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.columnSpan="2" />

                        <Label text="Type:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                        <TextField fx:id="typeField" promptText="Job Fair/Workshop/Conference" GridPane.columnIndex="1" GridPane.rowIndex="2" GridPane.columnSpan="2" />

                        <Label text="Date:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                        <DatePicker fx:id="datePicker" GridPane.columnIndex="1" GridPane.rowIndex="3" GridPane.columnSpan="2" />

                        <Label text="Lieu:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                        <TextField fx:id="lieuField" GridPane.columnIndex="1" GridPane.rowIndex="4" GridPane.columnSpan="2" />

                        <Label text="Statut:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                        <TextField fx:id="statutField" promptText="Actif/Annulé" GridPane.columnIndex="1" GridPane.rowIndex="5" GridPane.columnSpan="2" />
                    </children>
                    <columnConstraints>
                        <javafx.scene.layout.ColumnConstraints halignment="RIGHT" minWidth="80.0" />
                        <javafx.scene.layout.ColumnConstraints hgrow="ALWAYS" minWidth="300.0" />
                    </columnConstraints>
                </GridPane>

                <HBox alignment="CENTER" spacing="20.0">
                    <children>
                        <Button mnemonicParsing="false" onAction="#ajouterEvenement" prefWidth="100.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Ajouter" />
                        <Button mnemonicParsing="false" onAction="#modifierEvenement" prefWidth="100.0" style="-fx-background-color: #2196F3; -fx-text-fill: white;" text="Modifier" />
                        <Button mnemonicParsing="false" onAction="#supprimerEvenement" prefWidth="100.0" style="-fx-background-color: #f44336; -fx-text-fill: white;" text="Supprimer" />
                        <Button mnemonicParsing="false" onAction="#effacerFormulaire" prefWidth="100.0" text="Effacer" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </center>
</BorderPane>