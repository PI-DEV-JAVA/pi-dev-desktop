<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pi.controllers.ParticipationController">

    <top>
        <Label alignment="CENTER" prefHeight="60.0" text="GESTION DES PARTICIPATIONS" BorderPane.alignment="CENTER">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Label>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="20.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="30.0" left="50.0" right="50.0" top="30.0" />
            </padding>

            <children>
                <GridPane hgap="10.0" vgap="10.0">
                    <children>
                        <Label text="ID Participation:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <TextField fx:id="idField" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                        <Label text="ID Événement:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                        <TextField fx:id="idEventField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                        <Label text="ID Utilisateur:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                        <TextField fx:id="idUserField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                        <Label text="Statut:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                        <TextField fx:id="statutField" promptText="Inscrit/Annulé" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                    </children>
                    <columnConstraints>
                        <javafx.scene.layout.ColumnConstraints halignment="RIGHT" minWidth="120.0" />
                        <javafx.scene.layout.ColumnConstraints hgrow="ALWAYS" minWidth="200.0" />
                    </columnConstraints>
                </GridPane>

                <HBox alignment="CENTER" spacing="20.0">
                    <children>
                        <Button mnemonicParsing="false" onAction="#ajouterParticipation" prefWidth="100.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Ajouter" />
                        <Button mnemonicParsing="false" onAction="#modifierStatut" prefWidth="100.0" style="-fx-background-color: #2196F3; -fx-text-fill: white;" text="Modifier" />
                        <Button mnemonicParsing="false" onAction="#supprimerParticipation" prefWidth="100.0" style="-fx-background-color: #f44336; -fx-text-fill: white;" text="Supprimer" />
                        <Button mnemonicParsing="false" onAction="#effacerFormulaire" prefWidth="100.0" text="Effacer" />
                    </children>
                </HBox>

                <HBox alignment="CENTER" spacing="10.0">
                    <children>
                        <TextField fx:id="rechercheField" promptText="ID Événement" HBox.hgrow="ALWAYS" />
                        <Button mnemonicParsing="false" onAction="#rechercherParEvenement" text="Par événement" />
                        <Button mnemonicParsing="false" onAction="#rechercherParUtilisateur" text="Par utilisateur" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </center>
</BorderPane>