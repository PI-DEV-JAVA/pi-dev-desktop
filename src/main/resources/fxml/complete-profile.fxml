<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="talentospidev.controllers.ProfileController"
            stylesheets="@/style/app.css">

    <center>
        <VBox spacing="24" alignment="CENTER" styleClass="login-card" maxWidth="520">

            <Text text="Let's help you set up your profile"
                  styleClass="title-text"/>

            <GridPane hgap="16" vgap="6">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" percentWidth="50.0" />
                    <ColumnConstraints hgrow="SOMETIMES" percentWidth="50.0" />
                </columnConstraints>

                <!-- First Name -->
                <VBox spacing="2" GridPane.columnIndex="0" GridPane.rowIndex="0">
                    <HBox spacing="2" alignment="CENTER_LEFT">
                        <Label text="First Name" styleClass="field-label"/>
                        <Label text="*" styleClass="required-star"/>
                    </HBox>
                    <TextField fx:id="firstNameField" promptText="First Name"/>
                    <Label fx:id="firstNameError" styleClass="error-label" text="" visible="false" managed="false"/>
                </VBox>

                <!-- Last Name -->
                <VBox spacing="2" GridPane.columnIndex="1" GridPane.rowIndex="0">
                    <HBox spacing="2" alignment="CENTER_LEFT">
                        <Label text="Last Name" styleClass="field-label"/>
                        <Label text="*" styleClass="required-star"/>
                    </HBox>
                    <TextField fx:id="lastNameField" promptText="Last Name"/>
                    <Label fx:id="lastNameError" styleClass="error-label" text="" visible="false" managed="false"/>
                </VBox>

                <!-- Birth Date -->
                <VBox spacing="2" GridPane.columnIndex="0" GridPane.rowIndex="1">
                    <HBox spacing="2" alignment="CENTER_LEFT">
                        <Label text="Birth Date" styleClass="field-label"/>
                        <Label text="*" styleClass="required-star"/>
                    </HBox>
                    <DatePicker fx:id="birthDatePicker" maxWidth="Infinity"/>
                    <Label fx:id="birthDateError" styleClass="error-label" text="" visible="false" managed="false"/>
                </VBox>

                <!-- Phone -->
                <VBox spacing="2" GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <HBox spacing="2" alignment="CENTER_LEFT">
                        <Label text="Phone Number" styleClass="field-label"/>
                        <Label text="*" styleClass="required-star"/>
                    </HBox>
                    <TextField fx:id="phoneField" promptText="Phone Number"/>
                    <Label fx:id="phoneError" styleClass="error-label" text="" visible="false" managed="false"/>
                </VBox>

                <!-- Location -->
                <VBox spacing="2" GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.columnSpan="2">
                    <Label text="Location" styleClass="field-label"/>
                    <TextField fx:id="locationField" promptText="City, Country"/>
                </VBox>

                <!-- Professional Title -->
                <VBox spacing="2" GridPane.columnIndex="0" GridPane.rowIndex="3">
                    <HBox spacing="2" alignment="CENTER_LEFT">
                        <Label text="Professional Title" styleClass="field-label"/>
                        <Label text="*" styleClass="required-star"/>
                    </HBox>
                    <TextField fx:id="titleField" promptText="e.g. Software Engineer"/>
                    <Label fx:id="titleError" styleClass="error-label" text="" visible="false" managed="false"/>
                </VBox>

                <!-- Experience -->
                <VBox spacing="2" GridPane.columnIndex="1" GridPane.rowIndex="3">
                    <Label text="Years of Experience" styleClass="field-label"/>
                    <ComboBox fx:id="experienceBox" maxWidth="Infinity"/>
                </VBox>

                <!-- Summary -->
                <VBox spacing="2" GridPane.columnIndex="0" GridPane.rowIndex="4" GridPane.columnSpan="2">
                    <Label text="Professional Summary" styleClass="field-label"/>
                    <TextArea fx:id="summaryArea" promptText="Tell us about yourself..." prefRowCount="3"/>
                </VBox>

            </GridPane>

            <Button text="Complete Setup"
                    styleClass="primary-button"
                    onAction="#handleSave"/>

        </VBox>
    </center>
</BorderPane>
