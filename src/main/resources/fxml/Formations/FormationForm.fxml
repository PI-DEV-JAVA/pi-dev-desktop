<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="talentos.pidev.controllers.formations.FormationFormController"
      spacing="10" prefWidth="520">

    <padding>
        <Insets top="15" right="15" bottom="15" left="15"/>
    </padding>

    <Label fx:id="titleLabel" text="Ajouter formation" styleClass="page-title"/>

    <TextField fx:id="nomField" promptText="Nom"/>
    <TextArea fx:id="descArea" promptText="Description" prefRowCount="2"/>

    <HBox spacing="10">
        <DatePicker fx:id="dateDebutPicker" promptText="Date début"/>
        <DatePicker fx:id="dateFinPicker" promptText="Date fin"/>
    </HBox>

    <ComboBox fx:id="difficulteCombo" promptText="Difficulté"/>
    <TextField fx:id="categorieField" promptText="Catégorie"/>
    <TextField fx:id="formateurField" promptText="Formateur"/>
    <TextField fx:id="statutField" promptText="Statut (OUVERTE/FERMEE/TERMINEE)"/>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Annuler" onAction="#onCancel"/>
        <Button text="Enregistrer" onAction="#onSave"/>
    </HBox>

    <Label fx:id="errorLabel" text="" styleClass="error-text" wrapText="true"/>

</VBox>
