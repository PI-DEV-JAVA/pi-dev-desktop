<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="talentos.pidev.controllers.formations.FormationsCandidatController">

    <top>
        <VBox spacing="12" styleClass="card">
            <Label text="Formations disponibles" styleClass="page-title"/>

            <HBox spacing="10" alignment="CENTER_LEFT" styleClass="sort-toolbar">
                <TextField fx:id="searchField" promptText="Rechercher..." onKeyReleased="#onSearch"/>
                <ComboBox fx:id="triCombo" onAction="#onTriChanged" prefWidth="220"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="RafraÃ®chir" onAction="#onRefresh" styleClass="secondary-button"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true">
            <content>
                <FlowPane fx:id="cardsContainer" hgap="15" vgap="15" prefWrapLength="900">
                    <padding>
                        <Insets top="15" right="15" bottom="15" left="15"/>
                    </padding>
                </FlowPane>
            </content>
        </ScrollPane>
    </center>

</BorderPane>
