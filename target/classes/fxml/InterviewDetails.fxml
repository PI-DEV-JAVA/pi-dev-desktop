<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefWidth="1100" prefHeight="720"
            xmlns="http://javafx.com/javafx/17"
            fx:controller="talentos.pidev.controllers.InterviewDetailsController"
            xmlns:fx="http://javafx.com/fxml/1">

    <top>
    <VBox spacing="15" style="-fx-background-color: linear-gradient(to right, #1e293b, #0f172a);">
        <padding>
            <Insets top="25" right="40" bottom="25" left="40"/>
        </padding>

        <HBox spacing="20" alignment="CENTER_LEFT">
            <Button text="â†" 
                    style="-fx-font-size: 20px; -fx-background-color: transparent; -fx-text-fill: white;"
                    onAction="#onBack"
                    />

            <Label text="Interview Details"
                   style="-fx-text-fill: white; -fx-font-size: 26px; -fx-font-weight: bold;" />

            <Region HBox.hgrow="ALWAYS"/>

            <Label text="ACTIVE"
                   style="-fx-background-color: #22c55e; 
                          -fx-text-fill: white; 
                          -fx-padding: 6 16 6 16; 
                          -fx-background-radius: 20;
                          -fx-font-weight: bold;"/>
        </HBox>

        <Label fx:id="createdAtLabel" text="Created at: 2025-02-15 14:30"
       style="-fx-text-fill: #cbd5e1; -fx-font-size: 13px;"/>
    </VBox>
</top>

    <center>
        <ScrollPane fitToWidth="true" style="-fx-background: #f8fafc;">
            <VBox spacing="30">
                <padding>
                    <Insets top="40" right="40" bottom="40" left="40"/>
                </padding>

                <VBox spacing="20"
                      style="-fx-background-color: white; 
                             -fx-background-radius: 12; 
                             -fx-padding: 30; 
                             -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 20, 0, 0, 4);">

                    <Label text="General Information"
                           style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

                    <GridPane hgap="40" vgap="20">
                        <Label text="Title:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <Label fx:id="titleLabel" text="Senior Backend Developer Interview"
                            style="-fx-font-weight: bold;"
                            GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                        <!-- <Label text="Recruiter ID:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <Label fx:id="recruiterLabel" text="1024" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                        <Label text="Candidate ID:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <Label fx:id="candidateLabel" text="5689" GridPane.rowIndex="2" GridPane.columnIndex="1"/> -->

                        <Label text="General Grade:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <Label fx:id="gradeLabel" text="16.5 / 20" style="-fx-text-fill: #2563eb; -fx-font-weight: bold;"
                            GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                        <Label text="Status:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                        <Label fx:id="statusLabel" text="ACTIVE" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                    </GridPane>
                </VBox>

                <VBox spacing="20"
                      style="-fx-background-color: white; 
                             -fx-background-radius: 12; 
                             -fx-padding: 30; 
                             -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 20, 0, 0, 4);">

                    <HBox alignment="CENTER_LEFT" spacing="15">
                        <Label text="Interview Sessions"
                               style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Button text="Add Session"
                                style="-fx-background-color: #3b82f6; 
                                       -fx-text-fill: white; 
                                       -fx-background-radius: 8;
                                       -fx-padding: 8 16 8 16;"/>
                    </HBox>

                    <VBox fx:id="sessionsContainer" spacing="15">
                    </VBox>

                </VBox>

            </VBox>
        </ScrollPane>
    </center>

</BorderPane>
