<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="talentos.pidev.controllers.InterviewFormController"
      spacing="15" style="-fx-padding:20; -fx-background-color:white; -fx-border-radius:10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2),10,0,0,2);">

    <Label text="Interview Form" style="-fx-font-size:16px; -fx-font-weight:bold;"/>

    <Label text="Title"/>
    <TextField fx:id="titleField"/>

   

   <Label text="Candidate"/>
<ComboBox fx:id="candidateBox"/>

    <Label text="Status"/>
    <ComboBox fx:id="statusBox"/>


    <Label text="General Grade"/>
    <TextField fx:id="gradeField"/>

    <HBox spacing="10">
        <Button text="Save" onAction="#onSave"/>
        <Button text="Cancel" onAction="#onCancel"/>
    </HBox>
</VBox>
